<!DOCTYPE html>
<html lang="en">

{{>head}}

<body>
    {{>navbar}}

    <!-- main header -->
    <div class="containter-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row weatherRow">
                    <div class="main_content">
                        <form action="" class="temp_form">
                            <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                            <input type="submit" value="search" id="submitBtn">
                        </form>
                    </div>

                    <div class="tempinformation">
                        <div class="top_layer">
                            <p id="day"></p>
                            <p id="today_date"></p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Output</p>
                            <div class="middle_layer data_hide">
                                <p id="temp"><span id="curr_temp">0</span><sup>o</sup>C</p>
                                <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>
                            </div>
                        </div>
                    </div>
                    <!-- right-side-div -->

                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    {{>footer}}

    <script src="js/main.js"></script>
</body>

</html>